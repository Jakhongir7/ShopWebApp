@model ShopWebApp.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ProductName
        </dt>
        <dd class = "col-sm-10">
            @Model.ProductName
        </dd>
        <dt class = "col-sm-2">
            QuantityPerUnit
        </dt>
        <dd class = "col-sm-10">
            @Model.QuantityPerUnit
        </dd>
        <dt class = "col-sm-2">
            UnitPrice
        </dt>
        <dd class = "col-sm-10">
            @Model.UnitPrice
        </dd>
        <dt class = "col-sm-2">
            UnitsInStock
        </dt>
        <dd class = "col-sm-10">
            @Model.UnitsInStock
        </dd>
        <dt class = "col-sm-2">
            UnitsOnOrder
        </dt>
        <dd class = "col-sm-10">
            @Model.UnitsOnOrder
        </dd>
        <dt class = "col-sm-2">
            ReorderLevel
        </dt>
        <dd class = "col-sm-10">
            @Model.ReorderLevel
        </dd>
        <dt class = "col-sm-2">
            Discontinued
        </dt>
        <dd class = "col-sm-10">
            @Model.Discontinued
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>